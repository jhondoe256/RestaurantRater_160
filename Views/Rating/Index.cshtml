@model IEnumerable<Ratings_ListItemVM>

@{
    ViewData["Title"] = "Ratings";
}

<h1>Ratings</h1>
<p>
    @Html.ActionLink("Rate A Restaurant","Create")
</p>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model=> model.RestaurantName)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.FoodScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.CleanlinessScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.AtmosphereScore)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem=>item.RestaurantName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem=>item.FoodScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem=>item.CleanlinessScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem=>item.AtmosphereScore)
                    </td>
                    <td>
                        <a asp-action="DeleteRating" asp-controller="Rating" asp-route-id="@item.Id">Delete</a>
                        <a asp-action="GetRating" asp-controller="Rating" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p><strong>Sorry, There Are No Available Ratings.</strong></p>
}